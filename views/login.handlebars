<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Вход</h2>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Логин</label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control"
            placeholder="Логин"
          />
        </div>
        <div class="form-group">
          <label for="password">Пароль</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Пароль"
          />
        </div>
        <button type="submit" class="btn btn-success btn-sm btn-block">Войти</button>
      </form>
      <p class="lead mt-4">
        Нет аккаунта? <a href="/users/register">Регистрация</a>
      </p>
    </div>
  </div>
</div>


    <!-- Position it -->
    <div style="position: absolute; top: 10%; right: 0; margin:1%">
        {{#each success_msg}}
          <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
            <div class="toast-header">
              <i class="far fa-check-circle"></i>
              <img src="" class="rounded mr-2" alt="">
              <strong class="mr-auto">Успешно!</strong>
              <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="toast-body">
              {{ this }}
            </div>
          </div>
        {{/each}}
        {{#each error}}
          <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
            <div class="toast-header">
              <i class="far fa-times-circle"></i>
              <img src="" class="rounded mr-2" alt="">
              <strong class="mr-auto">Ошибка!</strong>
              <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="toast-body">
              {{ this }}
            </div>
          </div>
        {{/each}}
    </div>
  </div>


 <script>
   $(document).ready(function(){
     $('.toast').toast('show')
   })
 </script>